<%- include("header") -%>
<div class="box" id="heading">
      <h1><%= listTitle %></h1>
</div>
<div class="box">
      
            <% for (const item of items) {%>
               <form method="POST" action="delete">
                  <div class="item">
                        <input type="checkbox" name="removeItem" value="<%= item._id %>" onChange="this.form.submit()">
                        <input type="hidden" name="listName", value="<%= listTitle %>">
                        <p> <%= item.name %> </p>
                  </div>
               </form>
            <% } %>

      <form class="item" action="/" method="POST">
            <input type="text" name="addItem" id="add-item" placeholder="New Item" autocomplete="off">
            <button type="submit" name="listName" value="<%= listTitle %>">+</button>
      </form>
</div>
<%- include("footer") -%>