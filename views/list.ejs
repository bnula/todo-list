<%- include("header") -%>
<div class="box" id="heading">
      <h1><%= listTitle %></h1>
</div>
<div class="box">
      <% if (pageName === "/") { %> 
      <form method="POST" action="delete">
      <% } else {%>
      <form method="POST" action="<%= pageName %>/delete">
      <% } %> 
            <% for (const item of items) {%>
                  <div class="item">
                        <input type="checkbox" name="removeItem" value="<%= item._id %>" onChange="this.form.submit()">
                        <p> <%= item.name %> </p>
                  </div>
            <% } %>
      </form>

      <form class="item" action="<%= pageName %>" method="POST">
            <input type="text" name="addItem" id="add-item" placeholder="New Item" autocomplete="off">
            <button type="submit" name="source" value=<%= listTitle %>>+</button>
      </form>
</div>
<%- include("footer") -%>